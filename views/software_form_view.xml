<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="software_form_view">
            <field name="name">offer.form</field>
            <field name="model">offer_stats.software</field>
            <field name="arch" type="xml">
                <form string="Offer Form">
                    <sheet>
                        <group>
                            <field name="software"/>
                            <field name="sw_type"/>
                            <notebook>
                                <page string="Offers">
                                    <field name="offers"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>